<body>

    <h1>Mercedes W164 (ML) ArÄ±za Rehberi</h1>
    <input type="text" id="searchInput" class="search-box" placeholder="Hata kodu ara (Ã–rn: P0300)...">
    <div id="results"></div>

    <script>
        // Veriyi Ã§ek ve listele
        let database = [];

        // data.json dosyasÄ±ndan veriyi okuma
        fetch('data.json')
            .then(response => response.json())
            .then(data => {
                database = data;
                renderList(database);
            });

        const searchInput = document.getElementById('searchInput');
        const resultsDiv = document.getElementById('results');

        // Arama Fonksiyonu
        searchInput.addEventListener('input', (e) => {
            const term = e.target.value.toUpperCase();
            const filtered = database.filter(item => 
                item.code.includes(term) || item.description.toUpperCase().includes(term)
            );
            renderList(filtered);
        });

        function renderList(items) {
            resultsDiv.innerHTML = items.map(item => `
                <div class="card">
                    <div class="code">${item.code}</div>
                    <div class="desc">${item.description}</div>
                    <div class="solution">ðŸ’¡ Ã‡Ã¶zÃ¼m: ${item.solution}</div>
                </div>
            `).join('');
        }
    </script>
